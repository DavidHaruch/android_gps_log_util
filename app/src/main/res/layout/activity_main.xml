<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.gpslatlong.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/gps_box"
        android:textIsSelectable="true"
        android:layout_height="wrap_content"
        android:background="#f1f1f1"
        android:textSize="20sp"
        android:typeface="monospace"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gps_other"
        android:textIsSelectable="true"
        android:layout_below="@+id/gps_box"
        android:layout_alignParentStart="true"
        android:background="#f1f1f1"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="20sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gps_time"
        android:textIsSelectable="true"
        android:layout_below="@+id/gps_other"
        android:layout_alignParentStart="true"
        android:background="#f1f1f1"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="20sp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Mark this sample"
        android:onClick="markButton"
        android:id="@+id/mark_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
